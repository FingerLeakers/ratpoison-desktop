general {
#	output_format = "none"
	output_format = "xmobar"
	colors = true
	interval = 1
}

wireless ath0 {
	format_up = "%essid: %quality %ip %bitrate"
	format_down = "W: -"
}

ethernet eth0 {
	# if you use %speed, i3status requires root privileges
	format_up = "E: %ip (%speed)"
	format_down = "E: -"
}

#ethernet usb0 {
#	# if you use %speed, i3status requires root privileges
#	format_up = "U: %ip (%speed)"
#	format_down = "U: -"
#}

battery 0 {
	format = "%status %percentage %emptytime"
	last_full_capacity = yes
}

time {
	format = "%Y-%m-%d %H:%M:%S"
}

load {
	format = "%1min %5min %15min"
}

cpu_temperature 0 {
	format = "%degreesÂ°C"
}

disk "/" {
	format = "SDD: %avail"
}

